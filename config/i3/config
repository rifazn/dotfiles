## Start compton
exec compton -D 5 -I 0.05 -O 0.02 -f -b --xrender-sync --xrender-sync-fence
##### Trying with xrender-synce and backend as glx
#exec compton -D 5 -I 1.00 -O 0.05 -f -b

## Always open Firefox on the second workspace
assign [class="Firefox"] $ws2 

## Open Firefox with $mod+F2
bindsym $mod+F2 exec firefox
bindsym $mod+Shift+F2 exec firefox --private

## General bindsyms
bindsym $mod+F3 exec nautilus
bindsym $mod+p exec i3lock -p win -i Pictures/window.png

## Open a terminal in floating (useful for editing while browsing)
bindsym $mod+Shift+Return exec urxvt -name floating
for_window [class="URxvt" instance="floating"] floating enable border pixel 2 floating_minimum_size 300 x 150 floating_maximum_size 300 x 150 

## Take screenshot of a selected area
bindsym --release $mod+Print exec  scrot -s $HOME/`date +%Y-%m-%d_%H:%M:%S`.png
bindsym --release Print exec scrot $HOME/`date +%Y-%m-%d_%H:%M:%S`.png

## toggle workspaces
workspace_auto_back_and_forth yes

## performs something like minimizing windows
## taken from: http://i3wm.org/docs/userguide.html#_scratchpad

## Make the currently focused window a scratchpad
bindsym $mod+Shift+minus move scratchpad

## Make the media keys work
## source: https://faq.i3wm.org/question/3747/enabling-multimedia-keys.1.html

## open a terminal to the right
bindsym $mod+apostrophe split h exec i3-sensible-terminal

## open a terminal below
bindsym $mod+n split v exec i3-sensible-terminal

## Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #exec --no-startup-id pactl set-sink-volume bluez_sink.00_01_01_00_02_79.a2dp_sink +5% #increase sound volume 
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

## Mouse controls
# The middle button over a titlebar kills the window
bindsym --release button2 kill

# The middle button and a modifer over any part of the window kills the window
bindsym --whole-window $mod+button2 kill

# The right button toggles floating
bindsym button3 floating toggle
bindsym $mod+button3 floating toggle

# The side buttons move the window around
bindsym button9 move left
bindsym button8 move right

# Sreen brightness controls
bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

# Touchpad controls
bindsym XF86TouchpadToggle exec /some/path/toggletouchpad.sh # toggle touchpad

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Show the first scratchpad window
bindsym $mod+minus scratchpad show

# Show the sup-mail scratchpad window, if any.
#bindsym mod4+s [title="^Sup ::"] scratchpad show

hide_edge_borders smart

## Always open Telegram in floating mode
for_window [title="Telegram *"] floating enable

## Colors related stuff
## Taken from github.com/bookercodes/dotfiles

set $bg-color 	         #2f343f
set $inactive-bg-color   #2f343f
set $text-color          #f3f4f5
set $inactive-text-color #676E7D
set $urgent-bg-color     #E53935

# window colors
#                       border              background         text                 indicator
client.focused          $bg-color           $bg-color          $text-color          #000000
client.unfocused        $inactive-bg-color $inactive-bg-color $inactive-text-color #000000
client.focused_inactive $inactive-bg-color $inactive-bg-color $inactive-text-color #000000
client.urgent $urgent-bg-color $urgent-bg-color $text-color #00ff00

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
        status_command i3status
		colors {
			background #002b36
				separator #757575
				#                  border             background         text
				focused_workspace  #000000            #000000            #ffffff
				inactive_workspace #002b36  #002b36 #ffffff
				urgent_workspace   $urgent-bg-color   $urgent-bg-color   #ffffff
		}
}

